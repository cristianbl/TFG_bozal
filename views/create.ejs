  <body>
    <header>
        <div class="header">
            <img class="logo" src="/logo-icon.png" />
            <div class="planbtechTexto">Plan B TECH</div>
            <div class="menus">
              <a href="/" style="text-decoration: none;">
                <div class="home">Home</div>
              </a>
              <a href="/compute" style="text-decoration: none;">
                <div class="menu1">Registro</div>
              </a>
                <div class="menu2">Realizar Imputación</div>
                <div class="menu3">Reportar Ausencia</div>
              <a href="/about" style="text-decoration: none;">
                <div class="menu4">About</div>
              </a>
            </div>
            <div class="signin">
                <img class="usericon" src="/user.png">
                <p>Are you admin?</p>
                <form action="/login">
                <button class="signUp">Sign In</button>
              </div>
            </form>  
        </div>
    </header>

          <form action="/save" method="POST">

                  <div class="computo">
                    <h1>Crear Imputacion</h1>
                    <label for="user" class="form-label">Empresa</label>
                      <select class="campos" id="work" name="work" class="form-control" tabindex="1">
                        <option value="Plan B TECH">Plan B TECH</option>
                      </select>
                      
                      <label for="user">Empleado</label>
                      <input class="form-control campos" type="text" id="user" name="user" placeholder="Nombre del empleado.." tabindex="2">

                      <label for="user" class="form-label">Puesto</label>
                      <select class="campos" id="position" name="position" class="form-control" tabindex="3">
                        <option value="">Selecciona tu puesto de trabajo</option>
                        <option value="Finance">Finance</option>
                        <option value="Marketing" >Marketing</option>
                        <option value="Comercial">Comercial</option>
                        <option value="Compra" >Compra</option>
                        <option value="Logística" >Logística</option>
                        <option value="Control" >Control</option>
                        <option value="Comunicaciones" >Comunicaciones</option>
                        <option value="Atención al Cliente" >Atención al Cliente</option>
                        <option value="System" >System</option>
                        <option value="Developer" >Developer</option>
                      </select>

                      <label for="user" class="form-label">Horas</label>
                      <select class="campos" id="hours" name="hours" class="form-control" tabindex="4">
                        <option value="">Selecciona las horas que has realizado</option>
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                    </select>
                    
                    <label for="user" class="form-label">Fecha Actual:</label>
                    <input type = "date" class="form-control campos" id="joined" name="joined" tabindex="5">
                    <br>
                    
                    <div class="signin">
                    <button type="submit"class="compute">Imputar</button>
                    <a href="/" class="cancel"><p>Cancelar</p></a>
                    </div>
                  </div>
        </form>
        
    <footer>
