<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">
    <link href="/style.css" rel="stylesheet" type="text/css">
  <title>Full View - RRHH</title>
</head>
<body>
  <header>
      <div class="header">
          <img class="logo" src="/logo-icon_admin.png" />
          <div class="planbtechTexto">Plan B TECH</div>
          <div class="menus">
            <a href="/adminmode" style="text-decoration: none;">
                <div class="home">Home</div>
            </a>
            <a href="/fullview" style="text-decoration: none;">
                <div class="menu1">Administrador</div>
            </a>
                <div class="menu2">Recursos Humanos</div>
            <a href="/about" style="text-decoration: none;">
                <div class="menu3">About</div>
            </a>
        </div>
          <div class="signinAdmin">
              <img class="usericon" src="/user_admin.png">
              <p>RRHH Mode</p>
              <form action="/">
              <button class="signAdmin">Logout</button>
            </div>
          </form>  
      </div>
  </header>
  <div class="tableroRRHH">
    <div class="tabla">
        <h1>RRHH: Administración de cómputos</h1>
        <table id="users">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Empresa
                    </th>
                    <th>
                        Empleado
                    </th>
                    <th>
                        Puesto de trabajo
                    </th>
                    <th>
                        Horas
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((user)=> { %>
                    <tr>
                        <td>
                            <%= user.id %>
                        </td>
                        <td>
                            <%= user.work %>
                        </td>
                        <td>
                            <%= user.user %>
                        </td>
                        <td>
                            <%= user.position %>
                        </td>
                        <td>
                            <%= user.hours %>
                        </td>
                        <td>
                            <%= user.joined %>
                        </td>
                    <td>
                        <a href="/editrrhh/<%= user.id %>">
                            <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height: 1.5rem; color: #63b3ed;" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                        </a>
                    </td>
                    <td>
                        <!-- <a href="/delete/<%= user.id %>" onclick="return confirm('¿Esta seguro de eliminar registro?')"> -->
                            <a style="cursor: pointer;" onclick="confirmar(<%= user.id %>)">

                            <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height: 1.5rem; color: #fc8181;" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <a href="/adminmode" style="text-decoration: none;">
        <button class="compute">Atrás</button>
        </a>
    <a href="/absenceviewrrhh" style="text-decoration: none;">
        <button class="computeButtonrrhh">Admin. Ausencias</button>
        </a>
  </div>
    <footer>
        <div class="logoFooter">
            <img class="imagenLogo" src="/logo-footer-alt.png">
            <p>Easy computing bussiness!</p>
        </div>
        <div class="contacto">
            <h2>Support</h2>
            <img class="iconEmail" src="/envelope.png">support@example.com
            <img class="iconPhone" src="/telephone.png">910-784-8015
        </div>
  
        <div class="redeSociales">
            <h2>Follow</h2>
            <img class="facebook" src="/facebook (1).png">
            <img class="twitter" src="/twitter.png">
            <img class="instagram" src="/instagram (1).png">
            <img class="googleplus" src="/google.png">
  
  
        </div>
  
    </footer>
    <p class="derechosautor"> @ All rights reserved. Made by Cristian Bozal</p>
    </div>
</body>
            <script src ="https://code.jquery.com/jquery-3.5.1.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.17/dist/sweetalert2.all.min.js"></script>
            <script src ="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
            <script src ="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
            <script src ="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
            <script src ="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
            <script src ="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
            <script src ="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
            <script src ="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>
            <script src ="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
            <script>
                $(document).ready(function() {
                $('#users').DataTable( {
                    dom: 'lBfrtip',
                    buttons: [
                        'copy', 'csv', 'excel', 'pdf', 'print'
                    ]
                    });
                });
            </script>
            <script>
                function confirmar(id){
                    Swal.fire({
                    title: '¿Estás seguro que quieres eliminar el registro ' +id+'?', 
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Confirmar'
                    }).then((result) => {
                    if (result.isConfirmed) {
                        window.location = '/delete/'+id;
                            }
                        })
                    }
            </script>
   
    </html>